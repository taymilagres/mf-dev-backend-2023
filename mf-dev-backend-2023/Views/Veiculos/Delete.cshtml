@model mf_dev_backend_2023.Models.Veiculo

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center" style="color:#483D8B;">EXCLUIR VEÍCULO</h1>
<br/>

<h3>Tem certeza que deseja excluir este registro do veículo?</h3>
<div>
    <h4>Veiculo:</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Placa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Placa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnoFabricacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnoFabricacao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnoModelo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnoModelo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-secondary" asp-action="Index">Voltar para Lista</a>
        <input type="submit" value="Excluir Veículo" class="btn btn-danger" />
        
    </form>
</div>
<br/>
<p><em>Seção Delete do CRUD</em></p>
